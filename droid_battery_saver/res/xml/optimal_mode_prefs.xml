<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="@string/pref_add_new_mode_title" >

    <ListPreference
        android:key="screen_brightness"
        android:persistent="false"
        android:defaultValue=""
        android:title="@string/pref_screen_brightness_title"
        android:entries="@array/screen_brightness_entries"
        android:entryValues="@array/screen_brightness_values"
        android:summary="@string/pref_screen_brightness_summary" />
    <ListPreference
        android:key="screen_timeout"
        android:persistent="false"
		android:defaultValue=""
        android:title="@string/screen_timeout"
		android:summary="@string/pref_screen_timeout_summary"
        android:entries="@array/screen_timeout_entries"
        android:entryValues="@array/screen_timeout_values" />

    <SwitchPreference
        android:persistent="false"
        android:key="vibrate_on"
        android:summaryOff="@string/off"
        android:summaryOn="@string/on"
        android:switchTextOff="@string/off"
        android:switchTextOn="@string/on"
        android:title="@string/pref_vibrate_title" />
    <SwitchPreference
        android:persistent="false"
        android:key="wifi_on"
        android:summaryOff="@string/off"
        android:summaryOn="@string/on"
        android:switchTextOff="@string/off"
        android:switchTextOn="@string/on"
        android:title="@string/pref_wifi_title" />
    <SwitchPreference
        android:persistent="false"
        android:key="bluetooth_on"
        android:summaryOff="@string/off"
        android:summaryOn="@string/on"
        android:switchTextOff="@string/off"
        android:switchTextOn="@string/on"
        android:title="@string/pref_bluetooth_title" />
    <SwitchPreference
        android:persistent="false"
        android:key="mobile_data_on"
        android:summaryOff="@string/off"
        android:summaryOn="@string/on"
        android:switchTextOff="@string/off"
        android:switchTextOn="@string/on"
        android:title="@string/pref_mobile_data_title" />
    <SwitchPreference
        android:persistent="false"
        android:key="sync_on"
        android:summaryOff="@string/off"
        android:summaryOn="@string/on"
        android:switchTextOff="@string/off"
        android:switchTextOn="@string/on"
        android:title="@string/pref_sync_title" />
    <SwitchPreference
        android:persistent="false"
        android:key="haptic_feedback_on"
        android:summaryOff="@string/off"
        android:summaryOn="@string/on"
        android:switchTextOff="@string/off"
        android:switchTextOn="@string/on"
        android:title="@string/pref_haptic_feedback_title" />
    
    <EditTextPreference
        android:persistent="false"
        android:key="mode_description"
        android:title="@string/pref_desc_title"
        android:dialogTitle="@string/pref_desc_title" />

</PreferenceScreen>